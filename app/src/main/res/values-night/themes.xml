<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sisu2" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#9C27B0</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/buttontext</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B3C312</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/background</item>
        <item name="android:statusBarColor">@color/active</item>
    </style>


    <style name="SCREEN">
        <item name="android:background">#000000</item>
    </style>

    <!-- Text backgound if Light mode On -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- button backgound if Light mode On -->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>