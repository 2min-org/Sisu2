<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sisu2" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/login_button_text</item>
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <!-- Light mode -->
    <!-- Screen background if Light mode On -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
        <item name= "android:colorPrimary">@color/purple_700</item>
    </style>



    <!-- Text backgound if Light mode On -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
        <item name= "android:colorPrimary">@color/purple_700</item>
    </style>

    <!-- button backgound if Light mode On -->
    <style name="BUTTON">
        <item name="android:background">#4CAF50</item>
        <item name="android:textColor">#FFF</item>

    </style>

    <style name="Theme.Sisu2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sisu2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sisu2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>